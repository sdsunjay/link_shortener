<%= simple_form_for(@url, url: (@url.new_record? ? shorten_urls_path(@url) : shorten_url_path(@url)), html: { class: 'form-inline', id: '#new'}, remote: true, authenticity_token: true) do |f| %>
  <%= f.input :original_url, label: false, placeholder: 'Paste a link to shorten it', error: 'Invalid URL' unless @url.persisted? %>
  <%= f.input :original_url, label: false, disabled: true, placeholder: 'Paste a link to shorten it', error: 'Invalid URL' unless @url.new_record? %>
  <%= f.input :status, label: false, as: :select, prompt: "Select status", collection: ShortenUrl.statuses.keys unless @url.new_record? %>
  <%= f.button :submit, html: { class: 'btn btn-primary mb-2'} %>
 <% end %>
