<!-- 'access_level' must be set to 1 or 2 to view this page -->
<%= link_to 'New url', new_shorten_url_path %>
<% if @urls.any? %>
  <h3>Number of Urls: <%= @number_of_urls %></h3>
<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th scope="col">URL</th>
      <th scope="col">Shortened URL</th>
      <th scope="col">Status</th>
      <th scope="col">Created At </th>
      <th scope="col">Edit </th>
      <th scope="col">Delete </th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <th scope="row"><%= link_to url.original_url, shorten_url_path(url) %></th>
        <td><%= url.short_url %></td>
        <td><%= url.status %></td>
        <td><%= url.created_at.to_time.strftime('%B %e %H:%M' ) %></td>
        <td><%= link_to 'Edit', edit_shorten_url_path(url) %></td>
        <td><%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    <%= pagy_nav_bootstrap(@pagy).html_safe %>

    <% else %>
        <p>There are no urls!</p>
    <% end %>

    <br>
