<h2><%= link_to @user.name, user_path(@user) %></h2>
<p>Email: <%= @user.email %></p>
<p>Created At: <%= @user.created_at.to_time.strftime('%B %e %H:%M' ) %></p>
<p><%= link_to 'Edit', edit_user_registration_path(@user), class: 'btn btn-primary' %></p>
<% if @urls.any? %>
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="page-sub-title textcenter">
      <h2 class="page-header">Manage URLS <%= link_to 'New URL',  new_shorten_url_path, class:'btn btn-success pull-right'%></h2>
    </div><!-- end .page-sub-title -->
  </div><!-- end .col-md-12 col-sm-12 col-xs-12 -->
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">Original URL</th>
        <th scope="col">Shorten Link</th>
        <th scope="col">Status</th>
        <th scope="col">Clicks</th>
        <th scope="col">Show</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @urls.each do |url| %>
        <tr>
          <th scope="row"><%= url.original_url %></th>
          <td><%= url.short_url %></td>
          <td><%= url.status.humanize %></td>
          <td><%= url.url_clicks.count %></td>
          <td><%= link_to 'Show', shorten_url_path(url), class: 'btn btn-primary' %></td>
          <td><%= link_to 'Edit', edit_shorten_url_path(url), class: 'btn btn-primary' %></td>
          <td><%= link_to 'Delete', shorten_url_path(url), class: 'btn btn-danger', method: :delete, data: { confirm: "Are you sure?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= pagy_nav_bootstrap(@pagy).html_safe %>
<% else %>
  <p>There are no urls</p>
<% end %>
